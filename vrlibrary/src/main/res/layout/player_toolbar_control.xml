<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerVertical="true"
    android:background="#40000000">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/vr_voide_tool_large"
        android:src="@drawable/back_btn"/>


    <ToggleButton
        android:id="@+id/gyro_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/video_toolbar_tb_gyro"
        android:checked="true"
        android:text=""
        android:textOff=""
        android:visibility="invisible"
        android:textOn=""/>

    <ImageView
        android:id="@+id/screenshot_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/gyro_btn"
        android:src="@drawable/screenshot_btn"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        tools:text="长标题长标题长标题长标题长标题长标题长标题"
        android:textColor="#f5f5f5"
        android:textSize="24sp"
        android:visibility="gone"
        />


</RelativeLayout>
